{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "outDir": "build",
        // "rootDir": "src",
        "target": "ESNext",
        "lib": ["es6", "dom"],
        "sourceMap": false,
        "allowJs": true,
        "jsx": "react",
        "esModuleInterop":true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    
    // "include": ["src/"],
    "exclude": [
        "node_modules",
        "build",
        "public",
        "private",
        // "test",
        "scripts",
        "index.js"
    ]
}